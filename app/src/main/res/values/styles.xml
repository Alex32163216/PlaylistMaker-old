<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/x_axis_buttons</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/playlist_buttons_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/buttons_color_text</item>
        <item name="android:textSize">@dimen/playlist_text_size</item>
        <item name="cornerRadius">@dimen/corner_rounding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/buttons_color_icon</item>
    </style>

    <style name="PlaylistMaker">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/playlist_maker_color</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">@dimen/playlist_text_size</item>
    </style>

    <style name="name_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="navigationIcon">@drawable/vector5</item>
    </style>

    <style name="StyleButtonsSetting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingHorizontal">@dimen/icon_padding</item>
        <item name="android:paddingVertical">@dimen/size_buttons</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Search">
        <item name="android:textColor">@color/grey_white</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">500</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingEnd">@dimen/search_padding</item>
        <item name="android:src">@drawable/search</item>
    </style>

    <style name="TextSearch">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textColorHint">@color/grey_white</item>
        <item name="android:background">@null</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MissingCross">
        <item name="tint">@color/grey_white</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/search_padding</item>
        <item name="android:src">@drawable/clear</item>
    </style>




</resources>